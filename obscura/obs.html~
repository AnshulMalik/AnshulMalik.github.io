	<script>

	$(window).load(function () {
    // Animate loader off screen
		$(".se-pre-con").fadeOut("slow");
	
	var tl = new TimelineMax();

	tl.to("#obsHead", 5, {scrambleText:{text:"Obscura 3.0", chars:"lowerCase", chars: "lowercase", newClass:"glow", revealDelay:0.2, tweenLength:true, ease:Linear.easeNone}})
	.to(".tagline", 0.5, {"opacity": 1, "margin-top": 0})
	.to(".shake", 0.2, {"animation-play-state": "running"});
	
	});

</script>

	
